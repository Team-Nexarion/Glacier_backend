generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")

}
model admin {
  id         Int      @id @default(autoincrement())
  name       String
  email      String   @unique
  password   String
  photo      String? 
  position   String
  department String
  createdById  Int?
  createdBy    admin?  @relation("AdminCreation", fields: [createdById], references: [id])
  // Admins created by this admin
  createdAdmins admin[] @relation("AdminCreation")
  createdAt  DateTime @default(now())
  // Relations
  verifiedOfficials official[]
}
model official {
  id          Int      @id @default(autoincrement())
  name        String
  email       String   @unique
  password    String
  photo       String?
  position    String
  department  String

  isVerified  Boolean  @default(false)

  // Who verified this official
  verifiedById Int?
  verifiedBy   admin?  @relation(fields: [verifiedById], references: [id])

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  uploadedReports lakereport[]
  verifiedReports  lakereport[] @relation("VerifiedReports")
  declinedReports lakereport[] @relation("DeclineReports")
}


model lakereport {
  id               Int      @id @default(autoincrement())
  // Lake info
  lakeName         String
  latitude         Float
  longitude        Float
  region           String

  // Uploaded by official
  uploadedById     Int
  uploadedBy       official @relation(fields: [uploadedById], references: [id])
  uploadedAt       DateTime @default(now())

  // Observation
  Lake_Area_km2 Float @default(0.0)
  Dam_Slope_deg Float @default(0.0)
  Lake_Temp_C Float @default(0.0)
  Elevation_m Float @default(0.0)
  observationDate  DateTime @default(now())

  // AI result
  riskLevel        RiskLevel @default(LOW)
  confidence       Float     @default(0.0)
  assessedAt       DateTime  @default(now())

  // Verification
  verificationStatus VerificationStatus @default(PENDING)
  verifiedById     Int?
  verifiedBy       official? @relation("VerifiedReports", fields: [verifiedById], references: [id])
  verifiedAt       DateTime?

  // Decline
  
  declineById     Int?
  declineBy       official? @relation("DeclineReports", fields: [declineById], references: [id])
  declinedAt       DateTime?


  createdAt        DateTime @default(now())
}
enum RiskLevel {
  LOW
  MEDIUM
  HIGH
  IMMEDIATE
}
enum VerificationStatus {
  PENDING
  VERIFIED
  REJECTED
}